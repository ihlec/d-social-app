// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    // --- Change this line ---
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // Changed from ES2020
    // --- End Change ---
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
     "baseUrl": ".",
     "paths": {
       "@/*": ["src/*"]
     }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}